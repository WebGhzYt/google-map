<script>


  $(document).ready(function(){
    var company = <%= raw @company_map.to_json %>;  
    gmap_show(company);
    placeMarker(company)

  });
</script>



<table>
	<% if !@companys.any?  %>
 		No any company
 	<% else %>

		<% @companys.each do |company| %>
        
	      <tr>
          <td><%= company.id %></td>          
	        <td><%= link_to company.name , company_path(company.id) %></td>
	        <td><%= company.lat %></td>
	        <td><%= company.lng %></td>
	      </tr>
	 	<% end %>
	<% end %>	 
</table>

<center><div bgcolor="red"><h1><%= link_to 'Create New', new_company_path %></h1> </div></center>

<div style='width: 800px;'>Company Map
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
